all: package

# =============================================================================
# Package
# =============================================================================
package:
	@echo "Packaging..."
	python setup.py sdist bdist_wheel

# =============================================================================
# Install
# =============================================================================
install: package
	@echo "Installing..."
	pip install .

# =============================================================================
# Test
# =============================================================================
test:
	@echo "Testing..."
	pytest

.PHONY: all package install